<h2 class="text-2xl font-bold text-center mb-6 text-gray-800">
  <%= t("devise.passwords.edit.title") %>
</h2>

<div class="max-w-sm mx-auto bg-white shadow-xl rounded-xl p-8 space-y-6">
  <%= form_for(resource, as: resource_name,
               url: password_path(resource_name),
               html: { method: :put, class: "space-y-5" }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div>
      <label class="label">
        <span class="label-text font-semibold"><%= t("devise.passwords.edit.new_password") %></span>
        <% if @minimum_password_length %>
          <span class="text-xs text-gray-500">（<%= @minimum_password_length %>文字以上）</span>
        <% end %>
      </label>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input input-bordered w-full bg-base-200" %>
    </div>

    <div>
      <label class="label">
        <span class="label-text font-semibold"><%= t("devise.passwords.edit.password_confirmation") %></span>
      </label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full bg-base-200" %>
    </div>

    <div>
      <%= f.submit t("devise.passwords.edit.submit"), class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <div class="text-center text-sm text-gray-600">
    <%= link_to t("devise.passwords.edit.back_to_login"), new_session_path(resource_name), class: "link link-hover text-blue-600" %>
  </div>
</div>
